<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="horizontal"
    tools:context="com.example.vika.movieapp.Activities.MainActivity"
    tools:showIn="@layout/activity_main">

    <!--
    This layout is a two-pane layout for the Items master/detail flow.
    -->

    <FrameLayout
        android:id="@+id/fragment_grid"
        android:layout_width="@dimen/noWidth"
        android:layout_height="match_parent"
        android:layout_weight="@integer/twoPaneWeight" />

    <FrameLayout
        android:id="@+id/content_detail"
        android:layout_width="@dimen/noWidth"
        android:layout_height="match_parent"
        android:layout_weight="@integer/twoPaneWeight"
        android:background="@color/detailBackground"/>

</LinearLayout>